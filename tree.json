{
	"radius" 					: 100,
	"height" 					: 200,
	"root_height" 				: 5,
	"canopy_exponent" 			: 1.01,
	"attraction_point_count" 	: 10000,
	"branch_length" 			: 1,
	"kill_distance" 			: 1,
	"influence_distance" 		: 10,
	"twig_max_descendants" 		: 0,
	"soft_bends_weight" 		: 2,
	"branch_kill_age" 			: 2,

	"branch_radius" : {
		"constants" : {
			"initial_radius" 			: 0.001,
			"radius_growth" 			: 0.002
		},
		"function" : "sqrt(radius_growth * descendants + initial_radius)"
	},

	"leaf_check" : {
		"constants" : {
			"twig_max_descendants" : 10
		},
		"function" : "descendants <= twig_max_descendants"
	},

	"leaf_size" : {
		"constants" : {
			"growth_step" : 0.002
		},
		"function" : "(min(5, descendants+1) * growth_step)^0.5"
	}
}
